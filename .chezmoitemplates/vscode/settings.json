{
  "diffEditor.hideUnchangedRegions.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 5,
  "editor.find.autoFindInSelection": "multiline",
  "editor.fontFamily": "CaskaydiaCove Nerd Font, Menlo, Consolas, monospace",
  "editor.fontLigatures": "'ss01'",
  "editor.fontSize": 12,
  "editor.formatOnPaste": true,
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "boundary",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "search.smartCase": true,
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.automationProfile.windows": {
    // `%ComSpec%` is generally located at `C:\Windows\System32\cmd.exe`
    "path": "${env:ComSpec}"
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell Core (Scoop)",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.profiles.windows": {
    "Nu": {
      "path": "${env:USERPROFILE}/scoop/shims/nu.exe"
    },
    "PowerShell Core (Scoop)": {
      "path": "${env:USERPROFILE}/scoop/shims/pwsh.exe"
    },
  },
  "update.enableWindowsBackgroundUpdates": false,
  "update.mode": "none",
  "workbench.startupEditor": "none",
}
